#!/usr/bin/env bash

# Usage: createpj 431

set -e

if [ $# -lt 1 ]; then
  echo "Usage: $0 <number>"
  exit 1
fi

ID="$1"
BASE_DIR="ABC/${ID}"

mkdir -p "$BASE_DIR"
echo "Created directory: $BASE_DIR"

for f in A B C D; do
  FILE="${BASE_DIR}/${f}.cpp"
  if [ ! -e "$FILE" ]; then
    touch "$FILE"     # ✅ 空ファイルを作成
    echo "Created: $FILE"
  else
    echo "Skipped (exists): $FILE"
  fi
done
